{
  "builds": [
    {
      "src": "vercel.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/**",  
      "use": "@vercel/static"  
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/favicon(.*).ico",
      "dest": "/static/favicon$1.ico"
    },
    {
      "src": "/(.*).png",
      "dest": "/static/$1.png"
    },
    {
      "src": "/(.*).xml",
      "dest": "/static/$1.xml"
    },
    {
      "src": "/(.*).webmanifest",
      "dest": "/static/$1.webmanifest"
    },
    {
      "src": "/(.*)",
      "dest": "/vercel.py"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)\\.(css|js|png|jpg|jpeg|gif|svg|woff|woff2|eot|ttf|otf)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}